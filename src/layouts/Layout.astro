---
import Header from '@ui/Header.astro';
import Footer from '@ui/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles/global.css">
    <title>{ title }</title>
  </head>
  <body class="relative bg-woodsmoke-950 text-woodsmoke-50 font-poppins w-full h-screen flex flex-col">
    <Header/>
    <main class="relative w-3/5 flex-1 m-auto flex flex-col items-start justify-start transition-all">
      <slot/>
    </main>
    <Footer/>
  </body>
</html>
---
import Header from '@ui/Header.astro';
import Footer from '@ui/Footer.astro';
import Sidenav from '@ui/Sidenav.astro';
import { SWRProvider } from '@components/swr/swr-provider';

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles/global.css">
    <title>{ title }</title>
  </head>
  <body class="relative bg-woodsmoke-950 text-woodsmoke-50 font-poppins w-full h-screen flex flex-col">      
    <Sidenav/>
    <main class="relative max-md:w-3/5 md:w-1/2 flex-1 m-auto flex flex-col items-start justify-center transition-all">
      <slot/>
    </main>
  </body>
</html>
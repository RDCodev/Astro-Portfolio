---
import Sidenav from '@ui/Sidenav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={ Astro.generator } />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/styles/global.css"/>
    <title>{ title }</title>
  </head>
  <body class="relative bg-woodsmoke-950 text-woodsmoke-50 font-poppins w-full h-screen flex flex-col">      
    <Sidenav/>
    <main class="relative max-sm:w-4/5 sm:w-3/5 md:w-1/2 flex-1 m-auto flex flex-col items-start max-sm:justify-start sm:justify-center transition-all">
      <slot/>
    </main>
  </body>
</html>